<h1>Burgers</h1>

<div class="container row">
    <div class="card col-md-6">
        <div class="card-body">
            <h2>Burger List</h2>

            <ul>
            {{#each burgers}}
                {{#unless eaten}}
                {{> burgers/burger-block eaten=false}}
                {{/unless}}
            {{/each}}
            </ul>
        </div>
    </div>

    <div class="card col-md-6">
        <div class="card-body">
            <h2>Burgers you have Eaten!</h2>

            <ul>
            {{#each burgers}}
                {{#if eaten}}
                {{> burgers/burger-block eaten=true}}
                {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="container row">
    <div class="card">
        <div class="card-body">
            <h2>Add a Burger</h2>

            <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

            <div class="form-group">
                <label for="eaten">Eaten?</label><br>
                <input type="radio" name="eaten" value="1" checked> Eaten!<br>
                <input type="radio" name="eaten" value="0"> Not Eaten
            </div>

            <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>